<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Kanban View -->
        <record id="view_hr_candidate_kanban" model="ir.ui.view">
            <field name="name">hr.candidate.kanban</field>
            <field name="model">hr.candidate</field>
            <field name="arch" type="xml">
                <kanban default_group_by="status" records_draggable="1">
                    <field name="status"/>
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="expected_salary"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click oe_kanban_card">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown">
                                        <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                            <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div t-if="record.gender.raw_value">
                                        <span class="badge badge-pill" t-if="record.gender.raw_value == 'male'">Nam</span>
                                        <span class="badge badge-pill" t-if="record.gender.raw_value == 'female'" style="background-color: pink;">Nữ</span>
                                    </div>
                                    <div class="text-muted">
                                        Lương: <field name="expected_salary"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_hr_candidate_tree" model="ir.ui.view">
            <field name="name">hr.candidate.tree</field>
            <field name="model">hr.candidate</field>
            <field name="arch" type="xml">
                <tree decoration-success="status == 'done'" decoration-danger="status == 'cancel'" decoration-info="status == 'interview'">
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="status" widget="badge" decoration-success="status == 'done'" decoration-warning="status == 'offer'"/>
                    <field name="birthday" optional="hide"/>
                    <field name="expected_salary" sum="Total Salary"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_hr_candidate_form" model="ir.ui.view">
            <field name="name">hr.candidate.form</field>
            <field name="model">hr.candidate</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <!-- Statusbar Pipeline -->
                        <field name="status" widget="statusbar" options="{'clickable': '1'}" statusbar_visible="new,test,interview,offer,done"/>
                        <button string="Process" type="object" name="action_do_something" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Tên ứng viên..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="gender"/>
                                <field name="birthday"/>
                            </group>
                            <group>
                                <field name="expected_salary"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Chi tiết CV">
                                <field name="cv_content"/>
                            </page>
                            <page string="Đánh giá quản lý">
                                <field name="manager_note"/>
                            </page>
                        </notebook>
                    </sheet>
                    <!-- Chatter Section -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_hr_candidate_search" model="ir.ui.view">
            <field name="name">hr.candidate.search</field>
            <field name="model">hr.candidate</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="expected_salary"/>
                    <filter string="Đã tuyển dụng" name="filter_done" domain="[('status', '=', 'done')]"/>
                    <filter string="Mới ứng tuyển" name="filter_new" domain="[('status', '=', 'new')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Giới tính" name="group_gender" context="{'group_by': 'gender'}"/>
                        <filter string="Trạng thái" name="group_status" context="{'group_by': 'status'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>
