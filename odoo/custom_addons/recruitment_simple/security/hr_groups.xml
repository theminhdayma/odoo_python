<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_category_recruitment_simple">
            <field name="name">Tuyển dụng Simple</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_hr_customer" model="res.groups">
            <field name="name">Customer</field>
            <field name="category_id" ref="module_category_recruitment_simple"/>
        </record>

        <record id="group_hr_recruiter" model="res.groups">
            <field name="name">Recruiter</field>
            <field name="category_id" ref="module_category_recruitment_simple"/>
        </record>

        <record id="group_hr_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_recruitment_simple"/>
            <field name="implied_ids" eval="[(4, ref('group_hr_recruiter'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
</odoo>
