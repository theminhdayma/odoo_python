<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="rule_hr_candidate_recruiter" model="ir.rule">
            <field name="name">Recruiter: Own Records Only</field>
            <field name="model_id" ref="model_hr_candidate"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('recruitment_simple.group_hr_recruiter'))]"/>
        </record>

        <record id="rule_hr_candidate_manager" model="ir.rule">
            <field name="name">Manager: All Records</field>
            <field name="model_id" ref="model_hr_candidate"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('recruitment_simple.group_hr_manager'))]"/>
        </record>

        <record id="rule_hr_candidate_customer" model="ir.rule">
            <field name="name">Customer: All Records</field>
            <field name="model_id" ref="model_hr_candidate"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('recruitment_simple.group_hr_customer'))]"/>
        </record>
    </data>
</odoo>
