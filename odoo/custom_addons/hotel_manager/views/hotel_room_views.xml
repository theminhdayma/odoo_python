<odoo>

    <record id="view_hotel_room_tree" model="ir.ui.view">
        <field name="name">hotel.room.tree</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="floor"/>
                <field name="type_id"/>
                <field name="price_per_night"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_hotel_room_form" model="ir.ui.view">
        <field name="name">hotel.room.form</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="floor"/>
                    </group>
                    <group>
                        <field name="type_id"/>
                        <field name="price_per_night"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hotel_room" model="ir.actions.act_window">
        <field name="name">Danh sách phòng</field>
        <field name="res_model">hotel.room</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_hotel_room"
              name="Danh sách Phòng"
              parent="menu_hotel_room_management"
              action="action_hotel_room"
              sequence="10"/>

</odoo>
