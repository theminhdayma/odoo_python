<odoo>

    <record id="view_hotel_booking_form" model="ir.ui.view">
        <field name="name">hotel.booking.form</field>
        <field name="model">hotel.booking</field>
        <field name="arch" type="xml">
            <form string="Booking">
                <header>
                    <button name="action_confirm"
                            type="object"
                            string="Xác nhận"
                            class="btn-primary"/>

                    <button name="action_done"
                            type="object"
                            string="Hoàn thành"
                            class="btn-secondary"/>

                    <field name="state"
                        widget="statusbar"
                        statusbar_visible="draft,confirmed,done"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="customer_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="room_id" options="{'no_create': True}"/>
                            <field name="check_in"/>
                            <field name="check_out"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="duration" readonly="1"/>
                        </group>
                        <group>
                            <field name="total_amount"
                                   readonly="1"
                                   class="oe_highlight"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Dịch vụ thêm">
                            <field name="service_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hotel_booking_tree" model="ir.ui.view">
        <field name="name">hotel.booking.tree</field>
        <field name="model">hotel.booking</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="customer_id"/>
                <field name="room_id"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="total_amount"/>
                <field name="state"
                       decoration-info="state == 'draft'"
                       decoration-success="state == 'confirmed'"
                       decoration-muted="state == 'done'"/>
            </tree>
        </field>
    </record>

    <record id="view_hotel_booking_search" model="ir.ui.view">
        <field name="name">hotel.booking.search</field>
        <field name="model">hotel.booking</field>
        <field name="arch" type="xml">
            <search>
                <field name="customer_id" string="Khách hàng"/>
                <field name="room_id" string="Phòng"/>

                <filter name="today_booking"
                        string="Booking hôm nay"
                        domain="[('check_in', '=', context_today())]"/>

                <group expand="0" string="Nhóm theo">
                    <filter name="group_by_room"
                            string="Phòng"
                            context="{'group_by':'room_id'}"/>
                    <filter name="group_by_state"
                            string="Trạng thái"
                            context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_hotel_booking" model="ir.actions.act_window">
        <field name="name">Đặt phòng</field>
        <field name="res_model">hotel.booking</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_hotel_booking_search"/>
    </record>

    <menuitem id="menu_hotel_booking"
              name="Đặt phòng"
              parent="menu_hotel_reception"
              action="action_hotel_booking"
              sequence="10"/>

</odoo>
