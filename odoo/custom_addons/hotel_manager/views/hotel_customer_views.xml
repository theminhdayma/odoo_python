<odoo>

    <record id="view_hotel_customer_tree" model="ir.ui.view">
        <field name="name">hotel.customer.tree</field>
        <field name="model">hotel.customer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="identity_card"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <record id="view_hotel_customer_form" model="ir.ui.view">
        <field name="name">hotel.customer.form</field>
        <field name="model">hotel.customer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group string="Thông tin">
                            <field name="identity_card"/>
                            <field name="phone"/>
                        </group>
                        <group string="Lịch sử đặt phòng" colspan="2">
                            <field name="booking_ids">
                                <tree editable="bottom">
                                    <field name="code"/>
                                    <field name="room_id"/>
                                    <field name="check_in"/>
                                    <field name="check_out"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hotel_customer_search" model="ir.ui.view">
        <field name="name">hotel.customer.search</field>
        <field name="model">hotel.customer</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Tên"/>
                <field name="phone" string="SĐT"/>
                <field name="identity_card" string="CMND/CCCD"/>
            </search>
        </field>
    </record>

    <record id="action_hotel_customer" model="ir.actions.act_window">
        <field name="name">Khách hàng</field>
        <field name="res_model">hotel.customer</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_hotel_customer_search"/>
    </record>

    <menuitem id="menu_hotel_customer"
              name="Khách hàng"
              parent="menu_hotel_reception"
              action="action_hotel_customer"
              sequence="20"/>

</odoo>
