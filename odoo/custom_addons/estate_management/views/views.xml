# -*- coding: utf-8 -*-

<odoo>
    <record id="view_customer_tree" model="ir.ui.view">
        <field name="name">customer.tree</field>
        <field name="model">estate.customer</field>
        <field name="arch" type="xml">
            <tree string="Customers">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_customer_form" model="ir.ui.view">
        <field name="name">customer.form</field>
        <field name="model">estate.customer</field>
        <field name="arch" type="xml">
            <form string="Customer">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <tree string="Properties">
                                    <field name="name"/>
                                    <field name="address"/>
                                    <field name="price"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_property_tree" model="ir.ui.view">
        <field name="name">property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name"/>
                <field name="customer_id"/>
                <field name="address"/>
                <field name="expected_price"/>
            </tree>
        </field>
    </record>

    <record id="view_property_form" model="ir.ui.view">
        <field name="name">property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="customer_id"/>
                        <field name="address"/>
                        <field name="expected_price"/>
                        <field name="selling_price"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_customer" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">estate.customer</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_property" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_estate" name="Estate Management" parent="base.menu_custom"/>
    <menuitem id="menu_customer" name="Customers" action="action_customer" parent="menu_estate"/>
    <menuitem id="menu_property" name="Properties" action="action_property" parent="menu_estate"/>
</odoo>

